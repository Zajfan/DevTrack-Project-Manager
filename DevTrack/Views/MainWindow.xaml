<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="DevTrack.Views.MainWindow"
             Title="DevTrack">
    <ContentPage.BindingContext>
        <vm:MainWindowViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <Button x:Name="createProjectButton" Text="Create Project" Clicked="createProjectButton_Click" />
        <Button x:Name="updateProjectButton" Text="Update Project" Clicked="updateProjectButton_Click" />
        <Button x:Name="deleteProjectButton" Text="Delete Project" Clicked="deleteProjectButton_Click" />
        <CollectionView x:Name="projectsDataGrid" ItemsSource="{Binding Projects}" />

        <Button x:Name="createTaskButton" Text="Create Task" Clicked="createTaskButton_Click" />
        <Button x:Name="updateTaskButton" Text="Update Task" Clicked="updateTaskButton_Click" />
        <Button x:Name="deleteTaskButton" Text="Delete Task" Clicked="deleteTaskButton_Click" />
        <CollectionView x:Name="tasksDataGrid" ItemsSource="{Binding Tasks}" />
    </VerticalStackLayout>
</ContentPage>